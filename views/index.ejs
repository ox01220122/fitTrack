<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script
      src="https://kit.fontawesome.com/693f483c38.js"
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <title>Document</title>
    <style>
      body {
        margin: 0px;
      }

      /* ----------고정 상단바 ---------------------------------------------- */
      .defaultSetting {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
      }

      .mainTitle {
        background-color: rgb(182, 182, 182);
        padding: 20px;
        text-align: center;
        font-size: 40px;
      }
      .buttonBar {
        background-color: black;
        color: white;
        display: flex;
        justify-content: flex-end;
      }

      .buttonBar > .write,
      .buttonBar > .list {
        padding: 10px;
        cursor: pointer;
      }
      .buttonBar > .search {
        padding: 10px;
      }

      .buttonBar > .write:hover,
      .buttonBar > .list:hover {
        background-color: white;
        color: black;
      }
      /* ------------------------------------------------------------------------------------- */
      .bestPost {
        background-color: rgb(124, 173, 155);
        margin-top: 140px;
      }
      .mostRecentPost {
        background-color: rgb(124, 173, 155);
      }

      /* 게시글의 top bar ! margin-top으로 게시물 사이 간격 조정하기 */
      .bordTopbar {
        background-color: rgb(71, 71, 75);
        margin-top: 50px;
        margin-left: 50px;
        margin-right: 50px;
        /* padding-bottom: 15px; */
        height: 7vh;
        color: white;
        border-bottom: 1px solid black;
        display: flex; /* Flexbox 적용 */
        justify-content: space-between; /* 좌우 정렬 */
        align-items: center; /* 세로 가운데 정렬 */
        font-size: 15px;
      }

      .userContainer {
        display: flex;
        align-items: center;
        font-size: 15px;
      }
      /* 게시글의 내용  */
      .bordContent {
        background-color: rgb(225, 128, 225);
        margin-left: 50px;
        margin-right: 50px;
        padding-bottom: 170px;
        color: white;
        font-size: 15px;
      }
      .bordContentTitle {
        background-color: green;
        display: flex;
        justify-content: center;
        /* align-items: center; */
      }
      .bordContentContent {
        background-color: blue;
        display: flex;
        justify-content: center;
        padding: 20px;
      }

      /* 게시글의 댓글 */
      .bordComment {
        background-color: rgb(108, 150, 122);
        margin-left: 50px;
        margin-right: 50px;
        padding-bottom: 2vh;
        color: white;
        display: flex;
        align-items: center;
      }

      /* ----------------------------------------------------------------------- */
      .bordInputComment {
        width: 70%;
        height: 50%;
        resize: none;
      }
      .empty_heart {
        cursor: auto;
      }
    </style>
  </head>
  <!-- 고정 상단바 -->
  <body>
    <div class="defaultSetting">
      <div class="mainTitle">Fit Track</div>
      <div class="buttonBar">
        <div class="write" onclick="writeButton()">쓰기</div>
        <div class="list">목록</div>
        <div class="search">
          <input type="text" class="search" id="search" name="search" />
          <button id="searchButton" onclick="search()">검색</button>
        </div>
      </div>
    </div>

    <!-- bestPost, recentPost -->
    <div class="bestPost">
      <hr />
      <div>BEST POST</div>
      <hr />
    </div>

    <ol>
      <li>첫 번째 글</li>
      <li>두 번째 글</li>
      <li>세 번째 글</li>
    </ol>

    <div class="mostRecentPost">
      <hr />
      <div>Most Recent Post</div>
      <hr />
    </div>

    <!-- ----------------------게시물 띄우기!!!-------------------------------------------------- -->

    <!-- 게시물을 띄우는 창 -->
    <div class="postBord">
      <!-- 게시물 쓰기 창의 topbar -->
      <div class="bordTopbar">
        <div class="userContainer">
          <div class="userIcon">
            &nbsp;&nbsp;<i
              class="fa-solid fa-user fa-xl"
              style="color: #ffff"
            ></i>
          </div>
          <div class="userId">&nbsp;<%= data[0].user_id %></div>
        </div>
        <div class="timeNow">
          <%= data[0].created_date.toISOString().split('T')[0] %> <% const
          timeParts = data[0].created_time.split(':'); %> <%= timeParts[0]
          %>:<%= timeParts[1] %>&nbsp;&nbsp;
        </div>
      </div>
      <div class="bordContent">
        <span style="justify-content: center">title</span>
        <br />
        <div class="bordContentTitle"><%= data[0].title %><br /></div>
        <span style="justify-content: center">content</span>
        <br />
        <div class="bordContentContent"><%= data[0].content %></div>
      </div>
      <div class="bordComment">
        댓글
        <br />
        <!-- 비어있는 하트 -->
        <i
          id="empty_heart"
          class="fa-regular fa-heart fa-xl"
          style="color: #db0606"
          onclick="clickHeart()"
        ></i>
        <%= data[0].like_count %>

        <textarea
          rows="1"
          cols="50"
          class="bordInputComment"
          id="bordInputComment"
          placeholder="Comment"
        ></textarea>
        <!-- 전송버튼 -->
        <i class="fa-regular fa-paper-plane fa-xl" style="color: #000000"></i>
      </div>
    </div>
  </body>

  <script>
    (function () {})();
    const postBord = document.querySelector(".postBord");
    const write = document.querySelector(".write");
    const list = document.querySelector(".list");
    const writeBord = document.querySelector(".writeBord");

    document.addEventListener("DOMContentLoaded", () => {
      //   writeBord.hidden = true;
    });

    function writeButton() {
      //write페이지로 이동하기
      window.location.href = "/write";
    }

    function search() {
      //검색 눌렀을 경우 데이터 베이스에서 일치하는 단어 있는 쿼리문 가져오기
      const searchInput = document.getElementById("search");
      console.log(searchInput.value);
      if (!searchInput.value) {
        alert("검색어를 입력하세요");
      } else {
        //검색 페이지 렌더링
        axios({
          method: "POST",
          url: "/search",
          data: { keyword: searchInput.value },
        }).then((res) => {
          console.log("데이터 보내기 성공해서 받은 데이터", res.data.postData);
          window.location.href = "/list";
        });
      }
    }
    function clickHeart() {
      const heartIcon = document.querySelector(".fa-heart");

      if (heartIcon.className == "fa-regular fa-heart fa-xl") {
        heartIcon.className = "fa-solid fa-heart fa-xl";
        heartIcon.style.color = "#ff0000";
      } else {
        heartIcon.className = "fa-regular fa-heart fa-xl";
      }
    }
  </script>
</html>
